<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.venkateshalive.bankapplication.MainActivity">



    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_bank"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Banks Interest"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/button"

        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:onClick="otha"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView1"
        android:src="@drawable/ic_emi"
    android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="EMI CALCULATOR"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/button1"

        android:layout_alignBottom="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1"
        android:onClick="emi_btn_oc"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_currency"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="CURRENCY CONVERTER"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/button2"


        android:layout_alignBottom="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:onClick="cc_btn_oc"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_percentage"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="interest Calculator"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:onClick="gold"/>

</RelativeLayout>

